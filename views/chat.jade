extends layout

block content
  h1= 'Welcome to this chatroom'

  div(ng-controller='ChatCtrl')
    form#registerForm
      input#username(type='text', ng-model='username')
      a(href='#', ng-click='register()') Enter room

    div#chatContainer(style='display: none')
      div
      textarea(rows=10, cols=80, ng-model='message', ui-keypress="{enter: 'sendMessage()'}")
